<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="18dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    app:cardCornerRadius="0dp"
    app:cardElevation="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/recipeImage"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingRight="5dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/meal"
            tools:layout_editor_absoluteX="4dp"
            tools:layout_editor_absoluteY="2dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/recipeName"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/recipeImage"
                    android:layout_weight="10"
                    android:ellipsize="end"
                    android:fontFamily="@font/playfair_display"
                    android:maxLines="2"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="TextView"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="104dp"
                    tools:layout_editor_absoluteY="2dp" />
                <TextView
                    android:id="@+id/options"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:paddingLeft="25dp"
                    android:text="&#8942;"
                    android:layout_weight="1"
                    android:textAppearance="?android:textAppearanceLarge" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_below="@+id/recipeName"
                    android:layout_toEndOf="@+id/recipeImage"
                    android:paddingLeft="7dp"
                    app:srcCompat="@drawable/user_icon"
                    android:tint="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/recipeSource"
                    android:layout_width="150dp"
                    android:layout_height="21dp"
                    android:layout_below="@+id/recipeName"
                    android:layout_toEndOf="@+id/imageView2"
                    android:fontFamily="@font/alice"
                    android:paddingLeft="5dp"
                    android:text="TextView"
                    android:textSize="16sp"
                    tools:layout_editor_absoluteX="104dp"
                    tools:layout_editor_absoluteY="29dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/hourTime"
                    android:layout_toEndOf="@+id/recipeImage"
                    android:paddingLeft="7dp"
                    app:srcCompat="@drawable/clock"
                    android:tint="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/hourTime"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_alignStart="@+id/recipeSource"
                    android:layout_below="@+id/recipeSource"
                    android:fontFamily="@font/alice"
                    android:paddingLeft="5dp"
                    android:text="TextView"
                    android:textSize="16sp"
                    tools:layout_editor_absoluteX="207dp"
                    tools:layout_editor_absoluteY="16dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
