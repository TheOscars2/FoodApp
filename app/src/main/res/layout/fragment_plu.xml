<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".PluFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvPLU"
            android:layout_width="248dp"
            android:layout_height="0dp"
            android:layout_above="@+id/etPLU"
            android:layout_centerHorizontal="true"
            android:layout_weight="2"
            android:gravity="center_vertical|center_horizontal"
            android:paddingTop="20dp"
            android:text="Enter a PLU code:"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/etPLU"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@+id/btnLayoutPLU"
            android:layout_centerHorizontal="true"
            android:layout_weight="2"
            android:ems="15"
            android:gravity="center"
            android:maxLength="5"
            android:textSize="40dp" />

        <TableLayout
            android:id="@+id/btnLayoutPLU"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:layout_weight="10"
            android:gravity="bottom">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@color/PLU_Orange"
                    android:text="1"
                    android:textSize="22dp"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:background="@color/PLU_Orange"
                    android:text="2"
                    android:textSize="22dp"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:background="@color/PLU_Orange"
                    android:text="3"
                    android:textSize="22dp"
                    android:textStyle="normal" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@color/PLU_Orange"
                    android:text="4"
                    android:textSize="22dp"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/btn5"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:background="@color/PLU_Orange"
                    android:text="5"
                    android:textSize="22dp"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/btn6"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:background="@color/PLU_Orange"
                    android:text="6"
                    android:textSize="22dp"
                    android:textStyle="normal" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn7"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@color/PLU_Orange"
                    android:text="7"
                    android:textSize="22dp"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/btn8"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:background="@color/PLU_Orange"
                    android:text="8"
                    android:textSize="22dp"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/btn9"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:background="@color/PLU_Orange"
                    android:text="9"
                    android:textSize="22dp"
                    android:textStyle="normal" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btnDelete"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@color/PLU_Orange"
                    android:text="Del"
                    android:textSize="22dp"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/btn0"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:background="@color/PLU_Orange"
                    android:text="0"
                    android:textSize="22dp"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/btnEnter"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:background="@color/PLU_Orange"
                    android:text="Go"
                    android:textSize="22dp"
                    android:textStyle="normal" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/pluProgress"
        style="?android:attr/progressBarStyle"
        android:layout_width="113dp"
        android:layout_height="113dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="191dp"
        android:translationZ="1dp"
        android:visibility="invisible" />

</RelativeLayout>