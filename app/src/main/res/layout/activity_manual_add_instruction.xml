<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManualAddIngredientsActivity">

    <ListView
        android:id="@+id/lvInstructions"
        android:layout_width="match_parent"
        android:layout_height="255dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="46dp"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="34dp"></ListView>

    <Button

        android:id="@+id/btnAddInstruction"
        android:layout_width="56dp"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="26dp"
        android:layout_marginEnd="71dp"
        android:background="@drawable/mybutton2"
        android:textColor="@android:color/background_light"
        android:onClick="onAddInstruction"
        android:text="Add"
        tools:layout_editor_absoluteX="280dp"
        tools:layout_editor_absoluteY="447dp" />

    <EditText
        android:id="@+id/etNewInstruction"
        android:layout_width="249dp"
        android:layout_height="46dp"
        android:layout_alignTop="@+id/btnAddInstruction"
        android:layout_toStartOf="@+id/btnAddInstruction"
        android:ems="10"
        android:hint="Add new instruction"
        android:inputType="textMultiLine"
        android:lines="8"
        android:maxLines="10"
        android:scrollbars="vertical" />

    <Button
        android:id="@+id/ingDone"
        android:background="@drawable/mybutton2"
        android:layout_width="63dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnAddInstruction"
        android:onClick="onFinishedInstructions"
        android:textColor="@android:color/background_light"
        android:text="Done" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:paddingLeft="5dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:text="ADD YOUR INSTRUCTIONS"
        android:textSize="30sp" />


</RelativeLayout>