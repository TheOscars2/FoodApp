<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManualAddFragment">


    <Button
        android:id="@+id/addToFridgeBtn"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="72dp"
        android:background="@drawable/mybutton"
        android:text="add to fridge"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:text="ADD ITEM"
        android:textSize="30sp" />


    <EditText
        android:id="@+id/etFood"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etFoodExpirationDate"
        android:layout_alignStart="@+id/etFoodExpirationDate"
        android:ems="10"
        android:hint="Name of item"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etFoodQuantity"
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/etFood"
        android:layout_toEndOf="@+id/etFood"
        android:ems="10"
        android:hint="  Qty"
        android:inputType="number" />

    <EditText
        android:id="@+id/etFoodExpirationDate"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="13dp"
        android:ems="10"
        android:hint="Expiration date (MM/DD/YYYY)"
        android:inputType="date" />

    <Spinner
        android:id="@+id/dynamic_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="224dp" />



</RelativeLayout>