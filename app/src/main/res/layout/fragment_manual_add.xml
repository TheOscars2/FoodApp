<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManualAddFragment">


    <Button
        android:id="@+id/addToFridgeBtn"
        android:layout_width="wrap_content"
        android:paddingHorizontal="20dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="237dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="add to fridge"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:textColor="@android:color/background_light" />


    <EditText
        android:id="@+id/etFood"
        android:layout_width="247dp"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/etFoodExpirationDate"
        android:layout_alignParentTop="true"
        android:layout_marginTop="74dp"
        android:ems="10"
        android:hint="Name of item"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etFoodQuantity"
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/etFoodExpirationDate"
        android:layout_below="@+id/etFoodExpirationDate"
        android:ems="10"
        android:hint="  Qty"
        android:inputType="number" />

    <EditText
        android:id="@+id/etFoodExpirationDate"
        android:layout_width="304dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etFood"
        android:ems="10"
        android:hint="Expiration date (MM/DD/YYYY)"
        android:inputType="none" />

    <Spinner
        android:id="@+id/dynamic_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/etFoodQuantity"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/etFoodQuantity"
        android:layout_toRightOf="@+id/etFoodQuantity"
        android:backgroundTint="@color/colorPrimary"/>

</RelativeLayout>