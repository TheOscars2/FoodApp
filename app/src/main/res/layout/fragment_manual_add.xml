<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManualAddFragment">



    <Button
        android:id="@+id/addToFridgeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="add to fridge"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/etFood"
        android:layout_marginTop="35dp"
        android:text="Add..."
        android:textSize="30sp" />


    <EditText
        android:id="@+id/etFood"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="215dp"
        android:ems="10"
        android:hint="Name of item"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etFoodQuantity"
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/etFood"
        android:layout_toEndOf="@+id/etFood"
        android:ems="10"
        android:hint="  Qty"
        android:inputType="number" />

    <EditText
        android:id="@+id/etFoodExpirationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/etFood"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Expiration date"
        android:inputType="date" />



</RelativeLayout>